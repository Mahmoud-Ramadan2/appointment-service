<?xml version="1.0" encoding="UTF-8"?>

<!--logging priority
       TRACE < DEBUG < INFO < WARN < ERROR-->

<configuration>
    <!-- Add Spring Boot's color converters -->
    <conversionRule conversionWord="clr" converterClass="org.springframework.boot.logging.logback.ColorConverter"/>
    <conversionRule conversionWord="wex" converterClass="org.springframework.boot.logging.logback.WhitespaceThrowableProxyConverter"/>
    <conversionRule conversionWord="wEx" converterClass="org.springframework.boot.logging.logback.ExtendedWhitespaceThrowableProxyConverter"/>

    <!-- Common pattern -->

    <property name="LOG_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss} [%thread] %clr(%-5level) %clr(%logger{36}){cyan} - %msg%n"/>

    <property name="LOG_FILE"
              value="logs/appointment-service-logs.log"/>

    <!-- ========================= -->
    <!-- Development Profile Logs -->
    <!-- ========================= -->
    <springProfile name="dev">
        <appender name="DEV_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>${LOG_PATTERN}</pattern>
            </encoder>
        </appender>


        <appender name="DEV_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${LOG_FILE}</file>
            <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
                <fileNamePattern>logs/doctor-app-logs.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
                <maxFileSize>10MB</maxFileSize>
                <maxHistory>30</maxHistory>
                <totalSizeCap>100MB</totalSizeCap>
            </rollingPolicy>
            <encoder>
                <pattern>${LOG_PATTERN}</pattern>
            </encoder>
        </appender>
        <!-- Hibernate SQL Logger -->
        <logger name="org.hibernate.SQL" level="DEBUG"/>
        <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="TRACE"/>

        <!-- Reduce noise from Kafka & Eureka -->
        <logger name="org.apache.kafka" level="WARN"/>
        <logger name="org.springframework.kafka" level="INFO"/>
        <logger name="com.netflix.discovery" level="INFO"/>
        <logger name="org.springframework.cloud.netflix.eureka" level="INFO"/>

        <root level="DEBUG">
            <appender-ref ref="DEV_CONSOLE"/>
            <appender-ref ref="DEV_FILE"/>
        </root>
    </springProfile>

    <!-- ========================= -->
    <!-- Production Profile Logs -->
    <!-- ========================= -->
    <springProfile name="prod">
        <appender name="PROD_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${LOG_FILE}</file>
            <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
                <fileNamePattern>logs/doctor-app-logs.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
                <maxFileSize>10MB</maxFileSize>
                <maxHistory>30</maxHistory>
                <totalSizeCap>100MB</totalSizeCap>
            </rollingPolicy>
            <encoder>
                <pattern>${LOG_PATTERN}</pattern>
            </encoder>
        </appender>

        <logger name="org.apache.kafka" level="WARN"/>
        <logger name="org.springframework.kafka" level="INFO"/>
        <logger name="com.netflix.discovery" level="INFO"/>
        <logger name="org.springframework.cloud.netflix.eureka" level="INFO"/>
        <root level="INFO">
            <appender-ref ref="PROD_FILE"/>
        </root>
    </springProfile>

</configuration>
